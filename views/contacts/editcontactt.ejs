<%- include ../partials/header.ejs %>
<style>

    body {

        background-image: url("../images/12.JPG") ;}
    h1,h2{

        color:white;
    }
    label{
        color: white;

    }
</style>
<body>
<main class="container">
    <h1>Edit Contact</h1>

    <form method="post">
        <fieldset class="form-group">
            <label for="name" class="col-sm-2">Name: *</label>
            <input name="name" required value="<%= contact.name %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="number" class="col-sm-2">Content: *</label>
            <textarea name="number" required><%= contact.number %></textarea>
        </fieldset>
        <button type="submit" class="col-sm-offset-2 btn btn-success">Submit</button>
        <a href="/contacts/delete/<%= contact._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
            <button type="button" class="btn btn-danger">Delete</button>
        </a>

    </form>

</main>

</body>
</html>